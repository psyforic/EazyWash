<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.fragments.subfragments.MenuFragment">

    <GridLayout
        android:columnCount="2"
        android:rowCount="3"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 1 -->
        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/rplLyt_Laundry"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            android:layout_columnWeight="1"
            style="@style/RippleStyleBlack"
            android:layout_rowWeight="1">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/laundryCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:checkable="true"
                android:clickable="true"
                android:focusable="true"
                app:checkedIconSize="24dp"
                app:checkedIconMargin="10dp"
                app:checkedIconGravity="TOP_END"
                app:checkedIcon="@drawable/ic_check"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:backgroundTint="@color/colorPrimary"
                app:cardCornerRadius="8dp"
                android:layout_gravity="center"
                app:cardElevation="8dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_support"
                    app:tint="@color/ColorYellow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:fontFamily="@font/manrope_regular"
                    android:text="@string/str_laundry"
                    android:textColor="@color/white"
                    android:textFontWeight="600"
                    android:textSize="18sp" />
            </com.google.android.material.card.MaterialCardView>
        </com.balysv.materialripple.MaterialRippleLayout>
        <!-- 2 -->
        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            style="@style/RippleStyleBlack"
            android:layout_rowWeight="1">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dry_cleanCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:checkable="true"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:backgroundTint="@color/colorPrimary"
                app:cardCornerRadius="8dp"
                android:layout_gravity="center"
                app:cardElevation="8dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_clothing"
                    app:tint="@color/ColorYellow"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dry_cleaning"
                    android:textSize="18sp"
                    android:textFontWeight="600"
                    android:fontFamily="@font/manrope_regular"
                    android:layout_marginBottom="@dimen/_23sdp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textColor="@color/white" />
            </com.google.android.material.card.MaterialCardView>
        </com.balysv.materialripple.MaterialRippleLayout>
        <!-- 3 -->
        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            style="@style/RippleStyleBlack"
            android:layout_rowWeight="1">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/wash_foldCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:checkable="true"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:backgroundTint="@color/colorPrimary"
                app:cardCornerRadius="8dp"
                android:layout_gravity="center"
                app:cardElevation="8dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_orders"
                    app:tint="@color/ColorYellow"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wash_amp_fold"
                    android:textSize="18sp"
                    android:textFontWeight="600"
                    android:fontFamily="@font/manrope_regular"
                    android:layout_marginBottom="@dimen/_23sdp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textColor="@color/white" />
            </com.google.android.material.card.MaterialCardView>
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            style="@style/RippleStyleBlack"
            android:layout_rowWeight="1">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/steam_ironCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:checkable="true"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:backgroundTint="@color/colorPrimary"
                app:cardCornerRadius="8dp"
                android:layout_gravity="center"
                app:cardElevation="8dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_support"
                    app:tint="@color/ColorYellow"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/steam_iron"
                    android:textSize="18sp"
                    android:textFontWeight="600"
                    android:fontFamily="@font/manrope_regular"
                    android:layout_marginBottom="@dimen/_23sdp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textColor="@color/white" />
            </com.google.android.material.card.MaterialCardView>

        </com.balysv.materialripple.MaterialRippleLayout>
        <!-- 4 -->

        <!-- 5 -->
        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            style="@style/RippleStyleBlack"
            android:layout_rowWeight="1">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/shoe_cleaningCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:checkable="true"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:backgroundTint="@color/colorPrimary"
                app:cardCornerRadius="8dp"
                android:layout_gravity="center"
                app:cardElevation="8dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_clothing"
                    app:tint="@color/ColorYellow"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_shoe"
                    android:textSize="18sp"
                    android:textFontWeight="600"
                    android:fontFamily="@font/manrope_regular"
                    android:layout_marginBottom="@dimen/_23sdp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textColor="@color/white" />
            </com.google.android.material.card.MaterialCardView>
        </com.balysv.materialripple.MaterialRippleLayout>
        <!-- 6 -->
        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            style="@style/RippleStyleBlack"
            android:layout_rowWeight="1">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/car_seatCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:checkable="true"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:backgroundTint="@color/colorPrimary"
                app:cardCornerRadius="8dp"
                android:layout_gravity="center"
                app:cardElevation="8dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_orders"
                    app:tint="@color/ColorYellow"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_sofa"
                    android:textSize="18sp"
                    android:textFontWeight="600"
                    android:fontFamily="@font/manrope_regular"
                    android:layout_marginBottom="@dimen/_23sdp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textColor="@color/white" />
            </com.google.android.material.card.MaterialCardView>
        </com.balysv.materialripple.MaterialRippleLayout>
    </GridLayout>
</androidx.core.widget.NestedScrollView>