<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_18sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="@dimen/_15sdp">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_margin="@dimen/_50sdp"
                android:text="@string/thank_you"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/manrope_bold"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_margin="@dimen/_5sdp"
                android:text="Your payment was successful"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvStatus" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/materialDivider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_23sdp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:background="@color/colorAccent"
                app:dividerThickness="@dimen/_3sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvMessage" />

            <TextView
                android:id="@+id/tvDateLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="32dp"
                android:text="DATE"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/manrope_regular"
                android:textSize="@dimen/_18sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialDivider" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="3dp"
                android:text="18-08-2023"
                android:fontFamily="@font/manrope_bold"
                android:textSize="@dimen/_18sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDateLbl" />


            <TextView
                android:id="@+id/tvTimelbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="40dp"
                android:text="TIME"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/manrope_regular"
                android:textSize="@dimen/_18sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialDivider" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/manrope_bold"
                android:text="03:00 PM"
                android:textSize="@dimen/_18sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTimelbl" />

            <TextView
                android:id="@+id/tvAmountLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="60dp"
                android:text="AMOUNT"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/manrope_regular"
                android:textSize="@dimen/_18sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDate"
                tools:layout_editor_absoluteX="40dp" />

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="3dp"
                android:text="R180.00"
                android:fontFamily="@font/manrope_bold"
                android:textSize="@dimen/_18sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAmountLbl" />

            <TextView
                android:id="@+id/tvTransactionTypeLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/manrope_regular"
                android:text="PAYMENT METHOD"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_18sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvAmountLbl"
                app:layout_constraintTop_toBottomOf="@+id/tvTime" />

            <TextView
                android:id="@+id/tvMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="166dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/manrope_bold"
                android:text="Debit Card"
                android:textSize="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_40sdp"
                app:layout_constraintStart_toEndOf="@+id/tvAmount"
                app:layout_constraintTop_toBottomOf="@+id/tvTransactionTypeLbl" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/secondDivider"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_23sdp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:background="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="@id/tvMethod"
                app:layout_constraintStart_toStartOf="@id/tvAmount"
                app:layout_constraintTop_toBottomOf="@+id/tvMethod"
                app:layout_constraintBottom_toTopOf="@+id/payment_method_used" />

            <androidx.cardview.widget.CardView
                android:id="@+id/payment_method_used"
                android:layout_width="326dp"
                android:layout_height="90dp"
                android:background="@color/colorPrimaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/secondDivider">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/grey_10">

                    <ImageView
                        android:id="@+id/imgCard"
                        android:layout_width="68dp"
                        android:layout_height="50dp"
                        android:src="@drawable/mastercard"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/transparent"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imgCard">

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvCardType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/manrope_bold"
                        android:text="Credit/ Debit Card"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_14sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/_25sdp"
                        app:layout_constraintStart_toEndOf="@+id/imgCard" />

                    <TextView
                        android:id="@+id/tvCardDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14sdp"
                        android:text="Master Card ending ***67"
                        android:fontFamily="@font/manrope_regular"
                        app:layout_constraintTop_toBottomOf="@+id/tvCardType"
                        app:layout_constraintStart_toEndOf="@+id/imgCard" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@color/transparent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/btn_round"
            android:fontFamily="@font/manrope_regular"
            android:letterSpacing="0.05"
            android:text="@string/share"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textColor="@color/ColorWhiteNote"
            android:textFontWeight="600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lytText"
            tools:targetApi="p" />

        <Button
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/btn_round"
            android:backgroundTint="@color/ColorYellow"
            android:fontFamily="@font/manrope_regular"
            android:layout_weight="1"
            android:letterSpacing="0.05"
            android:text="@string/close"
            android:textAllCaps="false"
            android:textColor="@color/ColorWhiteNote"
            android:textFontWeight="600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lytText"
            tools:targetApi="p" />
    </LinearLayout>
</LinearLayout>